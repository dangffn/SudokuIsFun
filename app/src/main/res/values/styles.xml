<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="KeyBoardTheme">
        <item name="buttonStyle">@style/KeyBoardTheme.Button</item>
        <item name="imageButtonStyle">@style/KeyBoardTheme.Button</item>
    </style>

    <style name="KeyBoardTheme.Button">
        <item name="android:background">@drawable/key_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/gridValueTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KeyBoardTheme.Row">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

</resources>
