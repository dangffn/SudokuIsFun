<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.danbuntu.sudokuisfun.ui.SudokuGridView
        android:id="@+id/sudokuGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/imgPuzzlePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sudokuGridView"
        android:layout_alignEnd="@id/sudokuGridView"
        android:layout_alignLeft="@id/sudokuGridView"
        android:layout_alignRight="@id/sudokuGridView"
        android:layout_alignStart="@id/sudokuGridView"
        android:layout_alignTop="@id/sudokuGridView"
        android:scaleType="fitXY"
        android:visibility="invisible" />

</RelativeLayout>