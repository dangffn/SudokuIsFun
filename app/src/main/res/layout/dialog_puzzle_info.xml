<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogPuzzleInfoLayout"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:height="75dp"
        android:text="@string/puzzle_information"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_info_title_size"
        android:gravity="center|bottom"
        android:id="@+id/txtPuzzleTitle"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:scaleType="fitCenter"
        android:id="@+id/imgPuzzleStats"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/lstPuzzleStats"/>

</LinearLayout>